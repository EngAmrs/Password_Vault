<h1>Login</h1>
<%= form_with url: sessions_path, method: :post, local: true do |f| %>
  <div>
    <%= f.label :username %>
    <%= f.email_field :username %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.submit "Login" %>
  </div>
<% end %>
<%= link_to "Create User", new_user_path, class: "btn btn-primary" %>

